{% extends '@CeradTourn/Layout.html.twig' %}

{% block content %}
<div class="admin_container">

{% if is_granted('ROLE_SCORE_ENTRY') %}
<div class="admin">
  <ul><h2>Match Reporting</h2>
    <li><a href="{{ path('cerad_game__project__game_report__update', { '_project': 'natgames','_game':'1001' }) }}">Enter Match Results</a></li>
    <li><a href="{{ path('cerad_tourn_admin_results_export',{ '_format': 'xls' }) }}">Export Pool Score Board (Excel)</a></li>
  </ul>
</div>
{% endif %}

{% if is_granted('ROLE_SCORE_ADMIN')  %}
<div class="admin">
  <ul><h2>Schedule Management</h2>
    <li><a href="{{ path('cerad_tourn_admin_persons_list', { '_format' : 'xls' }) }}">Export Registered People (Excel)</a></li>
    <li><a href="{{ path('cerad_game__project__schedule_team__show', { '_project': 'natgames','_game':'1001' }) }}">View Game Schedule</a></li>
    <li><a href="{{ path('cerad_tourn_admin_schedule_games_export') }}">Export Game Schedule (Excel)</a></li>
    <li><a href="{{ path('cerad_tourn_admin_schedule_games_import') }}">Import Game Schedule (Excel)</a></li>
  </ul>
{% endif %}
</div>

{% if is_granted('ROLE_ASSIGNOR') %}
<div class="admin">
  <ul><h2>Referee Assignments</h2>
    <li><a href="{{ path('cerad_game__project__schedule_referee__show', { '_project': 'natgames' }) }}">View Referee Assignments</a></li>
    <li>{#<a href="{{ path('cerad_tourn_unassigned_matches_list') }}">#}View Unassigned Matches</a></li>
    <li>{#<a href="{{ path('cerad_tourn_schedule_official_list', { '_format': 'xls'}) }}">#}Export Referee Assignments (Excel)</a></li>
    <li><a href="{{ path('cerad_tourn_admin_schedule_officials_import') }}">Import Referee Assignments (Excel)</a></li>
    <li>{#<a href="{{ path('cerad_tourn_unregistered_officials_list') }}">#}Export Unregistered Referee List (Excel)</a></li>
  </ul>
</div>
{% endif %}

<div class="admin">
  <ul><h2>Account Management</h2>
    <li><a href="{{ path('cerad_tourn_admin_persons_list') }}">View Registered People</a></li>
{% if is_granted('ROLE_ASSIGNOR') %}
    <li>{#<a href="{{ path('cerad_tourn_admin_unapproved_persons_list') }}">#}View Unverified Registered People</a></li>
    <li><a href="{{ path('cerad_tourn_admin_person_feds_sync') }}">Sync eAYSO Information</a></li>
    <li><a href="{{ path('cerad_tourn_admin_persons_list', { '_format' : 'xls' }) }}">Export Registered People (Excel)</a></li>
    <li><a href="#">Import AYSO Information</a></li>
{% endif %}
  </ul>
</div>

</div>  <!--end div.container-->
{% endblock %}{# end content block #}
