{# @CeradTourn/Tourn/TopMenu/TournTopMenuIndex.html.twig   #}
{% set _project = 'natgames' %}
<div id='cssmenu'>
<ul>
{% if is_granted('ROLE_DEVELOPER') %}
  <li class="has-sub">Schedules
    <ul>
      <li>
        <a href="{{ path('cerad_game__project__schedule_game__show', { '_project': _project }) }}">Game Schedule</a>
      </li>
      <li>
        <a href="{{ path('cerad_game__project__schedule_team__show', { '_project': _project }) }}">Team Schedules</a>
      </li>
      <li class="last">
        <a href="{{ path('cerad_game__project__schedule_user__show', { '_project': _project }) }}">My Schedule</a>
      </li>
    </ul>
  </li>
  <li class="has-sub">Results
    <ul>
      <li>
          <a href="{{ path('cerad_game__project__results_poolplay__show', { '_project': _project }) }}">Pool Play</a>
      </li>
      <li class="last">
          <a href="{{ path('cerad_game__project__results_playoffs__show', { '_project': _project }) }}">Medal Round</a>
      </li>
    </ul>
  </li>
{% endif %}

{% if is_granted('ROLE_USER') %}
  <li class="right">
    <a href="{{ path('cerad_tourn_user_logout') }}">  Logout</a>
  </li>
{% if  is_granted('ROLE_STAFF') %}
  <li class="right">
    <a href="{{ path('cerad_tourn_admin') }}">  Admin</a>
  </li>
{% endif %}
  <li class="has-sub right">My Account
  <ul>
    <li>
      <a href="{{ path('cerad_tourn_person_update') }}">My Account</a>
    </li>
    <li>
      <a href="{{ path('cerad_tourn_person_plan_update') }}">My Plans</a>
    </li>
    <li>
      <a href="{{ path('cerad_tourn_home') }}">My Info</a>
    </li>
    <li class="last">
      <a href="{{ path('cerad_game__project__schedule_user__show', { '_project': _project }) }}">My Schedule</a>
    </li>
  </ul>
{% else %}
    <li class="right">
      <a href="{{ path('cerad_tourn_home') }}">Login</a>
    </li>
{% endif %}

</ul>
</div>