<form 
    id     = "cerad_account_register_form"
    class  = "cerad_account_register_form cerad_common_form1" 
    action = "{{ path('cerad_account_register') }}" 
    method = "post" 
    {{ form_enctype(form) }} novalidate
 >
    <fieldset><legend><span>Account Information</span></legend>
        {{ form_row(form.fedId)                    }}
        {{ form_row(form.user.name,               { 'label': 'Your Name' }) }}
        {{ form_row(form.user.username)            }}
        {{ form_row(form.user.email)               }}
        {{ form_row(form.user.plainPassword.pass1) }}
        {{ form_row(form.user.plainPassword.pass2,{ 'label': 'User Password (confirm)' }) }}
    </fieldset>
    <fieldset>
        <div class="cerad_common_form_controls controls">
            <span><strong>NOTE: ALL</strong> fields are required.</span>
            <input type="submit" name="accountRegister" value="Create Account" />
        </div>
    </fieldset>
<div style="display: none;">{{ form_rest(form) }}</div>
</form>
