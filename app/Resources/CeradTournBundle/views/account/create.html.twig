{# form_theme '@CeradTournBundle/fields.html.twig' #}
{% extends '@CeradTourn/layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
   <link rel="stylesheet" href="{{ asset('bundles/ceradtourn/css/forms.css') }}" media="all" />
{% endblock %}
   
{% block content %}
<div>
<form 
    id="zayso_register_form"
    class="zayso_register_form" 
    action="{{ path('cerad_tourn_account_create') }}" 
    method="post" 
    {{ form_enctype(form) }}
 >
    <fieldset><legend><span>Account Information</span></legend>
        {{ form_row(form.userName)       }}
        {{ form_row(form.personEmail)     }}
        {{ form_row(form.userPass.pass1) }}
        {{ form_row(form.userPass.pass2) }}
    </fieldset>
    <fieldset><legend><span>AYSO Information</span></legend>
        {{ form_row(form.aysoVolunteerId)  }}
        {{ form_row(form.aysoRegionId)     }}
        {{ form_row(form.aysoRefereeBadge) }}
    </fieldset>
    <fieldset><legend><span>Contact Information</span></legend>
        {{ form_row(form.personFirstName) }}
        {{ form_row(form.personLastName)  }}
        {{ form_row(form.personNickName)  }}
        {{ form_row(form.personPhone)     }}
    </fieldset>
    <fieldset>
        <div class="zayso_form_controls">
            <span></span>
            <input type="submit" name="accountCreate" value="Create Zayso Account" />
        </div>
    </fieldset>
<div style="display: none;">{{ form_rest(form) }}</div>
</form>
</div>
<br />
<div>
    <h3>Instructions</h3>
    <p>
        You must have your 8-difit AYSOID volunteer number to create an account.
        You should be able to look it up on www.eayso.org or ask your regional commissioner.
        Your Regional Referee Administrator can confirm your referee certification
        and volunteer form status in eAYSO.
    </p><p>
        In general you should only need one account per family.
        Additional referees can be added to your account once it is created.
        The will allow the account holder to sign up the other referees for games without having to switch accounts.
    </p>
</div>
{% endblock %}
